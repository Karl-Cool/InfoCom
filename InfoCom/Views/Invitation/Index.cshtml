@model InfoCom.ViewModels.InvitationViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Invitation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Invitation</h2>


@if (TempData["Message"] != null)
{
    <div class="alert @TempData["Type"]" role="alert">@TempData["Message"]</div>
}
@if (Model.Invitations.Count > 0)
{
    <div class="container">
        <div class="col-md-6">
            <table class="table table-hover">
                <tbody>
                    @foreach (var x in Model.Invitations)
                {
                        <tr>
                            <td>@x.Meeting.Title</td>
                            <td class="text-right">
                                @Html.ActionLink("Accept", "Accept/" + x.Id, "Invitation") | @Html.ActionLink("Deny", "Deny/" + x.Id, "Invitation")
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
}
else
{
    <p>You have no invitations.</p>
}
