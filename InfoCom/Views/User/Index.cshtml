@model InfoCom.ViewModels.UserIndexViewmodel
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
@if (TempData["Message"] != null)
{
    <div class="alert @TempData["Type"]" role="alert">@TempData["Message"]</div>
}
<div class="btn-toolbar">
    <a href="@Url.Action("Register")" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus"></span> Create User</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th class="text-right">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td class="text-right">
                    <div class="btn-group">



                        <a href="@Url.Action("/Edit/" + user.Id)" class="btn btn-xs btn-primary">
                            <span class="glyphicon glyphicon-edit"></span>Edit
                        </a>
                        <a href="@Url.Action("/ResetPassword/" + user.Id)" class="btn btn-xs btn-default">
                            <span class="glyphicon glyphicon-lock"></span> Reset Password
                        </a>
                        <a href="@Url.Action("/Deactivate/" + user.Id)" class="btn btn-xs btn-danger">
                            <span class="glyphicon glyphicon-remove"></span> Deactivate
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>