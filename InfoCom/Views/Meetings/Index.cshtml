@model InfoCom.ViewModels.MeetingsViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Meetings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Meetings</h2>


@if (TempData["Message"] != null)
{
    <div class="alert @TempData["Type"]" role="alert">@TempData["Message"]</div>
}
<h3>Received invitations</h3>

@if (Model.Invitations.Count > 0)
{
    <div class="container">
        <div class="col-md-6">
            <table class="table table-hover">
                <tbody>
                    @foreach (var x in Model.Invitations)
                {
                        <tr>
                            <td>@x.Meeting.Title</td>
                            <td class="text-right">
                                @Html.ActionLink("View", "View/" + x.Id, "Meeting")
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
}
else
{
    <p>You have no invitations.</p>
}

<h3>Created meetings</h3>
@if (Model.Meetings.Count > 0)
{
    <div class="container">
        <div class="col-md-6">
            <table class="table table-hover">
                <tbody>
                    @foreach (var x in Model.Meetings)
                    {
                        <tr>
                            <td>@x.Title</td>
                            <td class="text-right">
                                @Html.ActionLink("View", "View/" + x.Id, "Meeting") | @Html.ActionLink("Delete", "Delete/" + x.Id, "Meetings")
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
}
else
{
    <p>You have no created meetings.</p>
}


