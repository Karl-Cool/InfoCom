@model InfoCom.ViewModels.PostViewModel
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Post</h2>
<div class="post-area">

    <div class="post-Text">
        @using (Html.BeginForm("Post", "Feed", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <span class="title-separ">
                @Html.LabelFor(model => model.Title, "Title") <br />
                @Html.TextBoxFor(model => model.Title)
                @Html.DropDownListFor(model => model.CategoryId, Model.Categories, htmlAttributes: new { @class = "form-control", @id = "selected-category" })
                @Html.TextBoxFor(model => model.Category.Name)
            </span>
                <div class="col-lg-11">
                    <input type="submit" value="Add category" class="btn-info" />
                </div>
                   <br />
            <span class="radio-bottom-style">
                @Html.Label("Formal post")
                @Html.RadioButtonFor(model => model.Formal, true) <br />
                @Html.Label("Informal post")
                @Html.RadioButtonFor(model => model.Formal, false)  <br />

            </span>
            <div class="file-btn">
                <input type="file" name="file" />
                <input type="file" name="file2" />
                <input type="file" name="file3" />


            </div>
                
            <div class="col-lg-11">
                <input type="submit" value="Upload" class="btn-info" />
            </div>
           

            @*@Html.TextAreaFor(model => model.Content, new {@class= "textarea1" })*@
            @Html.TextAreaFor(model => model.Content, new { @class = "postText" })
          
           
        }




    </div>
    


</div>


