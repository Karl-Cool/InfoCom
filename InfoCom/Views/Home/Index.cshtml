@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Du är inloggad som:</h1>
    <p>Id: @User.Identity.GetUserId()</p>
    <p>Username: @User.Identity.Name</p>
    @if (User.IsInRole("Admin"))
    {
        <p>
            Role: Admin
        </p>
    }
    else
    {
        <p>
            Role: User
        </p>
    }
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <div id="calendar"></div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/jquery-ui-1.12.1.js")
    @Scripts.Render("~/Scripts/calendarScripts.js")
}